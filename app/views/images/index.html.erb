<p id="notice"><%= notice %></p>

<h1>Images</h1>

<table>
  <thead>
    <tr>
      <th>File name</th>
      <th>File name orig path</th>
      <th>File name small path</th>
      <th>Dimmensions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.file_name %></td>
        <td><%= image.file_name_orig_path %></td>
        <td><%= image.file_name_small_path %></td>
        <td><%= image.dimmensions %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

